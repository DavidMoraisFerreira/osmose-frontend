import cgi, re, sys, os
root_folder = os.environ["OSMOSE_ROOT"]
sys.path.append(root_folder)
from tools import osmose_common

print "Content-type: text/plain; Charset=UTF-8\n"

form = cgi.FieldStorage()

error_id = form.getfirst("id", "")

(err_source, err_class, err_subclass, err_elems) = error_id.split("-")

err_source = int(err_source)
err_class = int(err_class)
err_subclass = int(err_subclass)

if osmose_common.remove_bug(err_source, err_class, err_subclass, err_elems, "done") == 0:
  print "OK"
else:
  print "FAIL"
